@{
  Layout = "_Layout";
}
<title>Specialty index</title>
<div class="container">
  <h1>Health Clinic Specialties</h1>
  <h5 class="text-muted"><em>Select a specific specialty you would like to add a stylist to</em></h5>
  <hr />
  <h4><a class="btn-float add-new btn-info" href="/specialtys/new">Add new Specialty</a></h4>
  @if (Model.Count != 0)
  {
    <ul>
    @foreach (var specialty in Model)
    {
      <li><a class="bullet" href='/specialtys/@specialty.GetId()'>@specialty.GetDescription()</a> <br> <a class="btn-info edit-delete" href="/specialtys/@specialty.GetId()/update">Edit</a> | <a method="post" class="btn-info edit-delete" href="/specialtys/@specialty.GetId()/delete">Delete</a></li>
    }
    </ul>
  }
  <hr>
</div>
