@{
  Layout = "_Layout";
}

<title>Stylist Index</title>
<div class="container">
  <h1>Stylists:</h1>
  <h5 class="text-muted"><em>a list of current employees</em></h5>
  <hr />

  @if (Model.Count != 0)
  {
    <ul>
    @foreach (var stylist in Model)
    {
      <li><a class="bullet" href="/stylists/@stylist.GetId()">@stylist.GetName()</a><br>
      <a class="btn-info edit-delete" href="/stylists/@stylist.GetId()/update">Edit</a> | <a class="btn-info edit-delete" href="/stylists/@stylist.GetId()/delete">Delete</a></li>
    }
    </ul>
  }
  <hr>
</div>
